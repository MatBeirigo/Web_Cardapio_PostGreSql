@model WebCardapioSQL.Models.Bebida

@{
    ViewData["Title"] = "Create";
}
<html>

    <head>
        <link rel="stylesheet" type="text/css" href="../css/DesignToken.css">
    </head>

    <body class="body-bebidas">
        <h1>Adicionar Bebida</h1>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <h5><label asp-for="Nome" class="control-label"></label></h5>
                        <input asp-for="Nome" class="form-control" style="margin-bottom:25px"/>
                        <span asp-validation-for="Nome" class="text-danger"></span>

                        <h5><label asp-for="Preco" class="control-label"></label></h5>
                        <input asp-for="Preco" class="form-control"/>
                        <span asp-validation-for="Preco" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                    <input type="submit" value="Criar" class="btn-create" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </body>
</html>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
